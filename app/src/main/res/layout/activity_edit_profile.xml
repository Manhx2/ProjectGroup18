<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:focusable="true"
            android:src="@drawable/ic_btn_back"
            android:padding="15dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa hồ sơ"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tên hiển thị"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Nhập tên của bạn"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@color/colorSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ảnh đại diện"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnUploadPRFImage"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorTertiary"
                    android:textColor="@color/colorPrimary"
                    android:text="Tải ảnh lên"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnRemovePRFImage"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/colorPrimary"
                    android:text="Xóa ảnh"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ảnh bìa"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/btnUploadCVImage"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorTertiary"
                    android:textColor="@color/colorPrimary"
                    android:text="Tải ảnh lên"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnRemoveCVImage"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorSecondary"
                    android:textColor="@color/colorPrimary"
                    android:text="Xóa ảnh"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Tiểu sử"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editTextBio"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:hint="Giới thiệu bản thân..."
                android:maxLength="200"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorAccent"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:background="@color/colorSecondary"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorTertiary"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="right"
                android:text="Lưu"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>